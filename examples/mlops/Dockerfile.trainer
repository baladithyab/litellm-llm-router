# LLMRouter Training Environment
# For training/finetuning routing models

FROM pytorch/pytorch:2.2.0-cuda12.1-cudnn8-runtime

LABEL org.opencontainers.image.description="LLMRouter Training Environment"

WORKDIR /app

# Install system dependencies + uv
SHELL ["/bin/bash", "-o", "pipefail", "-c"]
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    wget \
    vim \
    && rm -rf /var/lib/apt/lists/* \
    && curl -LsSf https://astral.sh/uv/install.sh | sh

ENV PATH="/root/.local/bin:$PATH"

# Install ML/Training dependencies with uv
RUN uv pip install --system --no-cache \
    mlflow>=2.10.0 \
    wandb \
    jupyter \
    jupyterlab \
    scikit-learn \
    pandas \
    numpy \
    matplotlib \
    seaborn \
    transformers \
    datasets \
    accelerate \
    peft \
    bitsandbytes \
    sentencepiece \
    sentence-transformers \
    boto3 \
    pyyaml \
    tqdm \
    optuna \
    click

# Install LLMRouter from GitHub
RUN uv pip install --system --no-cache git+https://github.com/ulab-uiuc/LLMRouter.git

# Copy MLproject and training utilities
COPY examples/mlops/MLproject /app/MLproject
COPY examples/mlops/scripts /app/scripts

# Create data directories
RUN mkdir -p /app/data /app/models /app/notebooks /app/configs

WORKDIR /app

CMD ["bash"]
