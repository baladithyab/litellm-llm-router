# LiteLLM + LLMRouter Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Required Settings
# =============================================================================

# Master API key for admin access
LITELLM_MASTER_KEY=sk-your-master-key-here

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Azure OpenAI
AZURE_API_KEY=
AZURE_API_BASE=https://your-resource.openai.azure.com/

# Google Vertex AI
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# =============================================================================
# Database (for HA setup)
# =============================================================================

POSTGRES_USER=litellm
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=litellm
DATABASE_URL=postgresql://litellm:change_me@postgres:5432/litellm

# =============================================================================
# Redis (for caching)
# =============================================================================

REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# S3/GCS Configuration Sync
# =============================================================================

# Config from S3
CONFIG_S3_BUCKET=
CONFIG_S3_KEY=

# Models from S3
LLMROUTER_MODEL_S3_BUCKET=
LLMROUTER_MODEL_S3_KEY=

# AWS Credentials (if not using IAM roles)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# LLMRouter Settings
# =============================================================================

LLMROUTER_HOT_RELOAD=true
LLMROUTER_RELOAD_INTERVAL=300

# =============================================================================
# MLOps (for training setup)
# =============================================================================

MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_ARTIFACT_BUCKET=llmrouter-artifacts
WANDB_API_KEY=
HF_TOKEN=

# MinIO (local S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Jupyter
JUPYTER_TOKEN=llmrouter

